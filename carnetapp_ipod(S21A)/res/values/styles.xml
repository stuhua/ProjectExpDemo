<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.NoTitleBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="style_main_head_tv" parent="android:Widget.Holo.Light.TextView">
        <item name="android:background">@drawable/common_sel_main_tv_head</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/common_sel_main_tv_head</item>
        <item name="android:textSize">24px</item>
    </style>

    <style name="style_play_title">
        <item name="android:textColor">#07C4EC</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textScaleX">0.895</item>
    </style>

    <style name="style_play_tag">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textScaleX">0.895</item>
    </style>

    <style name="style_play_time">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="style_center">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>