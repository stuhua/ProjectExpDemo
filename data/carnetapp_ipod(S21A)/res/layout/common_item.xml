<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8px"
        android:clickable="true"
        android:duplicateParentState="true"
        android:src="@drawable/sel_special_item_iv" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19px"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_item_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12px"
            android:duplicateParentState="true"
            android:text=""
            android:textColor="@color/common_sel_tv_item_first"
            android:textSize="21px" />

        <TextView
            android:id="@+id/tv_item_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4px"
            android:layout_marginTop="6px"
            android:duplicateParentState="true"
            android:text=""
            android:textColor="@color/common_sel_tv_item_seconed"
            android:textSize="14px" />
    </LinearLayout>

</LinearLayout>