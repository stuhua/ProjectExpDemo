<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80px" >

    <ImageView
        android:id="@+id/iv_musiclist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8px"
        android:layout_marginTop="17px"
        android:clickable="true"
        android:src="@drawable/common_ic_muiclist_iv" />

    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_musiclist"
        android:layout_marginRight="8px"
        android:clickable="true"
        android:src="@drawable/common_sel_iv_play" />

    <ImageView
        android:id="@+id/iv_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_musiclist"
        android:layout_marginRight="16px"
        android:layout_toLeftOf="@+id/iv_play"
        android:background="@drawable/common_sel_iv_all"
        android:clickable="true" />

    <View
        android:layout_width="638px"
        android:layout_height="5px"
        android:layout_below="@+id/iv_all"
        android:layout_marginTop="16px"
        android:background="@drawable/divider_horizontal_double" />

</RelativeLayout>